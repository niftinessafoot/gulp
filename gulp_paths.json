{
  "html": {
    "in": ["src/**/*.html", "!src/inc/**"],
    "out": "dist"
  },
  "img": {
    "in": "src/i/**/*.{gif,png,jpg,svg}",
    "out": "dist/i"
  },
  "js": {
    "in": "src/js/**/*.js",
    "out": "dist/js"
  },
  "misc": {
    "in": "src/**/*.{txt,ico,mp3,woff,woff2,ttf,json}",
    "out": "dist"
  },
  "sass": {
    "in": "src/scss/**/*.scss",
    "out": "dist/css"
  },
  "inc": {
    "in": "src/inc/**"
  }
}